<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.itsme.belajarmembaca.MainActivity">

    <LinearLayout
        android:layout_width="576dp"
        android:layout_height="343dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="120dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/iv_BelajarMembaca"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bm1"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="133dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_play2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@drawable/play"
                    android:contentDescription=""
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:layout_editor_absoluteX="189dp"
                    tools:layout_editor_absoluteY="236dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mengenal"
                    tools:ignore="HardcodedText,MissingConstraints"
                    tools:layout_editor_absoluteX="199dp"
                    tools:layout_editor_absoluteY="311dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/play"
                    android:contentDescription=""
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:layout_editor_absoluteX="287dp"
                    tools:layout_editor_absoluteY="236dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Belajar"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="311dp"
                    tools:layout_editor_absoluteY="311dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/Ib_Exit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:layout_weight="0.1"
            android:background="@drawable/exit"
            android:onClick="buttonExit"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="318dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
